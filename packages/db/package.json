{
  "name": "@packages/db",
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./schema": "./src/schema/index.ts",
    "./types": "./src/types/index.ts",
    "./enum": "./src/types/enum.ts",
    "./env": "./env.ts"
  },
  "scripts": {
    "_reset": "rm -rf ./migrations && pnpm db generate -- --name=init && sed -i '1iCREATE EXTENSION IF NOT EXISTS pg_trgm;--> statement-breakpoint\\n' ./migrations/0000_init.sql && sed -i '2i\\' ./migrations/0000_init.sql",
    "db": "sst shell drizzle-kit",
    "format": "prettier --write .",
    "lint": "eslint --fix --max-warnings=0",
    "tscheck": "tsc"
  },
  "lint-staged": {
    "*": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix --max-warnings=0"
    ]
  },
  "prettier": "@packages/prettier-config",
  "dependencies": {
    "drizzle-orm": "0.45.1",
    "drizzle-zod": "0.8.3",
    "pg": "8.18.0",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@types/pg": "8.16.0",
    "drizzle-kit": "0.31.9"
  }
}
