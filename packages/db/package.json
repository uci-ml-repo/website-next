{
  "name": "@packages/db",
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./schema": "./src/schema/index.ts",
    "./enum": "./src/enum.ts",
    "./env": "./env.ts"
  },
  "scripts": {
    "_reset": "docker compose down && docker compose up -d --build && rm -rf ./migrations && pnpm generate init && sed -i '1iCREATE EXTENSION IF NOT EXISTS pg_trgm;\\n' ./migrations/0000_init.sql && sed -i '2i\\' ./migrations/0000_init.sql && pnpm migrate",
    "format": "prettier --write .",
    "generate": "drizzle-kit generate --name",
    "lint": "eslint --fix --max-warnings=0",
    "migrate": "drizzle-kit migrate",
    "push": "drizzle-kit push",
    "studio": "drizzle-kit studio",
    "tscheck": "tsc --noEmit"
  },
  "lint-staged": {
    "*": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix --max-warnings=0"
    ]
  },
  "prettier": "@packages/prettier-config",
  "dependencies": {
    "@t3-oss/env-core": "0.13.8",
    "dotenv": "17.2.1",
    "drizzle-orm": "0.44.4",
    "pg": "8.16.3",
    "zod": "4.0.17"
  },
  "devDependencies": {
    "@types/pg": "8.15.5",
    "drizzle-kit": "0.31.4"
  }
}
