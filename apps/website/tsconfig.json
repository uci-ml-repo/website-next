{
  "extends": "@packages/typescript-config",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@website/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@server/*": ["src/server/*"],
      "@website/env": ["env.ts"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "sst.config.ts"]
}
